{
  "name": "pdf2md-cli",
  "version": "1.0.0",
  "description": "Fast PDF to Markdown converter using Bun and Gemini AI",
  "type": "module",
  "bin": {
    "pdf2md": "./bin/pdf2md"
  },
  "scripts": {
    "build": "bun build ./src/index.ts --compile --outfile bin/pdf2md",
    "dev": "bun run ./src/index.ts",
    "prepare": "bun run build"
  },
  "author": "pc-style",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "conf": "^15.0.2",
    "ora": "^9.0.0",
    "unpdf": "^1.4.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5"
  }
}
